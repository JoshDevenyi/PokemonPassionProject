@{
    ViewBag.Title = "New";
}


<h2>Add a New Trainer</h2>
<a href="/Trainer/List">Go Back to Trainer List</a>

<form action="/Trainer/Create" method="POST">
    <div>
         <label>Name:</label>
        <input type="text" name="TrainerName" />
    </div>
    <div>
        <label>Title:</label>
        <input type="text" name="TrainerTitle " />
    </div>
    <div>
        <label>Bio:</label>
        <textarea name="TrainerBio"></textarea>
    </div>
    <div>
        <input type="submit" value="Add Trainer" />
    </div>
</form>

