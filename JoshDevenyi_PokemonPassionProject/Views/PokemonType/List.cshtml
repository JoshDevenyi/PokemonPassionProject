@model IEnumerable<JoshDevenyi_PokemonPassionProject.Models.PokemonTypeDto>


@{
    ViewBag.Title = "List";
}

<h2>Pokémon Types</h2>
<a class="addLink navLink" href="/PokemonType/New">Add Type</a>

@foreach (var pokemontype in Model)
{

<div style="background-color: @pokemontype.PokemonTypeColor" class="typeBox">

    <a href="/PokemonType/Details/@pokemontype.PokemonTypeId" class="typeLink"><h3>@pokemontype.PokemonTypeName</h3></a>

</div>

}
