@model JoshDevenyi_PokemonPassionProject.Models.PokemonTypeDto

@{
    ViewBag.Title = "Edit";
}

<h2>Update @Model.PokemonTypeName</h2>

<form action="/PokemonType/Update/@Model.PokemonTypeId" method="POST">
    <div style="display:none;">
        <input type="number" name="PokemonTypeId" value="@Model.PokemonTypeId" />
    </div>
    <div>
        <label>Name:</label>
        <input type="text" name="PokemonTypeName" value="@Model.PokemonTypeName" />
    </div>
    <div>
        <input type="submit" value="Update Type" />
    </div>
</form>

