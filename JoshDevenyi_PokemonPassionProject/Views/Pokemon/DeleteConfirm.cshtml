@model JoshDevenyi_PokemonPassionProject.Models.PokemonDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete @Model.PokemonName?</h2>

<div class="linkBox">
    <a href="/Pokemon/List" class="navLink">Cancel</a>
</div>

<form action="/Pokemon/Delete/@Model.PokemonId" method="POST" class="delete">
        
    <input type="submit" style="background-color:red;" value="Confirm Delete"/>

</form>

